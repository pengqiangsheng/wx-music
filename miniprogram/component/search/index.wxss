@import '../../style/iconfont.wxss';


.search-wrapper {
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 10px;
  box-sizing: border-box;
  background-color: rgba(245, 245, 245,1);
  z-index: 1300;
  font-size: 14px;
}
.header {
  position: relative;
  width: 100%;
  display: flex;
}
.cancle {
  width: 8%;
  margin-left: 2%;
  text-align: center;
  line-height: 60rpx;
  color: #222;
}
.search-bar {
  position: relative;
  height: 60rpx;
  background-color: rgba(255, 255, 255,1);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.search-icon {
  margin: 0 5px;
  font-size: 20px;
  color: rgba(46, 4, 4, 0.3);
}
.search-bar > input {
  width: 670rpx;
  font-size: 14px;
  color: rgba(46, 4, 4, 0.9);
}
.hot-search {
  width: 100%;
  margin: 20px 0;
}
.title {
  font-size: 18px;
  font-weight: 600;
  color: #222;
}
.context {
  margin: 10px 10px 0 10px;
  display: flex;
  flex-wrap:  wrap;
  align-items: center;
  font-size: 12px;
}
.context-item {
  background-color: #fff;
  padding: 4px 8px;
  margin: 6px;
  border-radius: 12px;
}
.histroy-search {
  position: relative;
  width: 100%;
  margin-bottom: 20px;
}
.title-icon {
  position: absolute;
  color: rgba(46, 4, 4, 0.4);
  top: 4px;
  right: 5px;
}
.serach-back {
  position: fixed;
  bottom: 40px;
  right: 20px;
  height: 30px;
  width: 30px;
  color: #1296db;
  padding: 4px;
  font-size: 12px;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}