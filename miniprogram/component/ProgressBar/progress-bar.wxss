.progress-wrapper {
  display: flex;
  justify-items: center;
  align-items:center;
}
.progress-main {
  position: relative;
  flex: 4;
  width: 100%;
  height: 4px;
}
.progress-text {
  color: rgba(255,255,255,0.5);
  font-size: 14px;
  flex: 1;
  text-align: center;
}
.progress-bar {
  position: relative;
  width: 0px;
  height: 2px;
  z-index: 11;
  background-color: #1296db;
}
.progress-bar > .point {
  position: absolute;
  top: -3px;
  right: -4px;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background-color: #1296db;
}
.progress-fliter{
  position: absolute;
  height: 2px;
  width: 100%;
  z-index: 10;
  background-color: #ccc;
}