@import '../../style/iconfont.wxss';


.song-sheet-wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}


.item-wrapper {
  position: relative;
  width: calc(33.33% - 6px);
  margin: 3px
}

.image-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  width: 100%;
}
.image-wrapper > image {
  width: 200rpx;
  height: 200rpx;
}

.play-count {
  position: absolute;
  top: 5px;
  right: 12px;
  color: #fff;
  font-size: 12px;
}

image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.text-high {
  position: relative;
  width: 500rpx;
  font-size: 28rpx;
  color: rgb(24, 2, 2);
  margin: 10rpx 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: block;
}
.text-high-hot {
  position: relative;
  width: 100%;
  font-size: 28rpx;
  color: rgb(24, 2, 2);
  margin: 10rpx 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: block;
}

.text {
  position: relative;
  width: 100%;
  font-size: 24rpx;
  color: rgba(46, 4, 4, 0.3);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

