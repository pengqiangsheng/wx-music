@import '../../style/iconfont.wxss';


.my-wrapper {
  position: relative;
  width: 100%;
  color: #222;
}
.my-top {
  position: relative;
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.my-top > image {
  border: none;
}
.user-wrapper {
  position: relative;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  z-index: 102;
  text-align: center;
}

.user-wrapper > image {
  border-radius: 50%;
}

.filter-wrapper {
  position: absolute;
  z-index: 100;
  opacity: 0.8;
  filter: blur(20px);
  -ms-filter:  blur(20px);
  -moz-filter: blur(20px);
  -webkit-filter: blur(20px);
}
.recent-and-fav {
  position: relative;
  width: 100%;
  padding: 10px 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ccc;
}

.recent-and-fav > .item {
  position: relative;
  width: 50%;
  text-align: center;
  font-size: 16px;
}
.recent-and-fav > .active::before {
  content: '';
  position: absolute;
  bottom: -10px;
  margin-left: 24rpx;
  background: #1296db;
  border-radius: 2px;
  width: 50rpx;
  height: 4px;
}
.recent-and-fav > .active {
  color: #1296db;
}
.recent-and-fav > .item > .number {
  font-size: 12px;
}
.my-play-list {
  position: relative;
  width: 750rpx;
  height: 800rpx;
  border-top: 1px solid #ccc;
  /* border-radius: 10px; */
  z-index: 1000;
}
.play-list-header {
  position: relative;
  width: 100%;
  height: 40px;
  padding: 0 10px;
  box-sizing: border-box;
  display: flex;
  justify-content:space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.toggole-bar {

  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
 
}
.toggole-bar > .iconfont {
  font-size: 22px;
  margin-right: 10px;
  color: rgba(0, 0, 0,.8);
}
.play-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;

}
.play-btn > .iconfont {
  margin-right: 10px;
  font-size: 22px;
  color: rgba(0, 0, 0,.8);
}

.list-bottom {
  padding-bottom: 200rpx;
}
.userinfo-nickname {
  font-size: 18px;
  color: #fff;
}